<main class="container">
  <h1>Homepage</h1>
  <section id="posts">
    {{#each posts}}
      <article class="post">
        <div class="post-content" data-id="{{this.id}}">
          <h2>{{this.title}}</h2>
          <p>{{this.content}}</p>
          <p>By: {{this.user.username}}</p>
          <p>Posted on: {{format_date this.createdAt}}</p>
        </div>

        <section class="comments">
          <h3>Comments</h3>
          {{#each this.comments}}
            <div class="comment">
              <p>{{this.comment_text}}</p>
              <p>By: {{this.user.username}}</p>
            </div>
          {{else}}
            <p>No comments yet.</p>
          {{/each}}
        </section>
      </article>
    {{else}}
      <p>No posts yet.</p>
    {{/each}}
  </section>
</main>
<script src="/js/main.js"></script>